{{define "eventPreview"}}
<section id="eventPreview">
    <h2>Vergangene/Anstehende Veranstaltungen</h2>
{{if .EventList}}
{{range .EventList}}
    <a class="event" href="/event/{{.Id}}" style="background-image: url('{{.ImageUrl}}')">
        <div class="description">

            <h3>{{.Theme}}</h3>
            <h4>{{.EventDate.Format "02.01.2006"}}</h4>
        </div>
    </a>
{{end}}
{{else}}
    <p>Es sind keine Veranstaltungen vorhanden.</p>
{{end}}
    <a href="/event/all">Zeige alle Veranstaltungen</a>
</section>
{{end}}
