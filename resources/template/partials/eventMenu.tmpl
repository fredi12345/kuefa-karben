{{define "eventMenu"}}
<section id="main">
{{with .Event}}
    <h2 id="motto">{{ .Theme }}!</h2>
    <h2 id="date">{{ .EventDate.Format "02.01.2006 - 15:04"}}</h2>
    {{ if $.Authenticated }}
    <script>
        function confirmDeletion() {
            return confirm("Möchten Sie die Veranstaltung wirklich löschen?");
        }
    </script>
    <form action="/event/edit" method="get">
        <input name="eventId" value="{{.Id}}" hidden>
        <input type="submit" value="Bearbeiten">
    </form>
    <form id="deleteForm" action="/event/delete" onsubmit="return confirmDeletion()" method="post">
        <input name="eventId" value="{{.Id}}" hidden>
        <input type="submit" value="Löschen">
    </form>
    <br>
    {{end}}
    <img src='{{ .ImageUrl }}'/>
    <br>
    <h3>Vorspeise</h3>
    <p>{{ .Starter }}</p>
    <span class="stars">☆☆☆</span>
    <h3>Hauptgang</h3>
    <p>{{ .MainDish }}</p>
    <span class="stars">☆☆☆</span>
    <h3>Nachspeise für die Hungrigen</h3>
    <p>{{ .Dessert }}</p>
    <span class="stars">☆☆☆</span>
    <br>
    <p>{{ .InfoText }}</p>
{{end}}
</section>
{{end}}