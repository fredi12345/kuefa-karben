{{define "imageGallery"}}
    {{ if .ImageNames }}
        <section id="images">
            <h1>Galerie</h1>
            <div id="gallery">
                {{ range .ImageNames }}
                    <div class="imageBox">
                        <a href="/public/images/{{.Name}}"><img src="/public/thumbs/{{.Name}}"/></a>
                        {{if eq $.PageLocation "gallery"}}
                            <a href="/event/{{.EventId}}" class="button">{{.EventName}}</a>
                        {{end}}
                    </div>
                {{end}}
            </div>
            <div id="paging">
                {{if gt .PreviousPage 0}}
                    <a id="newer" class="button" href="/gallery/{{.PreviousPage}}">Zur√ºck</a>
                {{end}}
                {{if gt .NextPage 0}}
                    <a id="older" class="button" href="/gallery/{{.NextPage}}">Weiter</a>
                {{end}}
            </div>
        </section>
    {{end}}
{{end}}